server.port=0

# Database
spring.datasource.url=jdbc:sqlserver://;serverName=<serverName>;databaseName=<databaseName>;encrypt=true;trustServerCertificate=true;
# ex. spring.datasource.url=jdbc:sqlserver://;serverName=localhost;databaseName=portfolio;encrypt=true;trustServerCertificate=true;
spring.jpa.hibernate.ddl-auto=update

# Resource Server
spring.security.oauth2.resourceserver.jwt.issuer-uri=<authServer>
# ex. spring.security.oauth2.resourceserver.jwt.issuer-uri=http://localhost:9000

# Eureka Client
eureka.client.serviceUrl.defaultZone=<discoveryServer>
# ex. eureka.client.serviceUrl.defaultZone=http://eureka:eureka@localhost:8761/eureka

# Kafka
spring.kafka.bootstrap-servers=<kafkaBroker/zookeeper>
# ex. spring.kafka.bootstrap-servers=localhost:9092